<?xml version="1.0" encoding="UTF-8" ?>
<!--Signature details in company form view-->
<odoo>
    <record id="wilco_view_company_form_inherit" model="ir.ui.view">
        <field name="name">res.company.view.form.inherit.wilco_project</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='favicon']" position="after">
                <field name="wilco_signature" widget="image" class="float-start oe_avatar"/>
            </xpath>
        </field>
    </record>
</odoo>